<%- include('../partials/header') %>
<h2><%= supplier && supplier._id ? 'Edit Supplier' : 'Add Supplier' %></h2>

<form method="post" action="/suppliers/create">
  <input type="hidden" name="id" value="<%= supplier._id || '' %>">
  <input type="text" name="name" placeholder="Supplier Name" value="<%= supplier.name || '' %>" required><br>
  <input type="text" name="address" placeholder="Address" value="<%= supplier.address || '' %>"><br>
  <input type="text" name="phone" placeholder="Phone" value="<%= supplier.phone || '' %>"><br>
  <button type="submit">Save</button>
</form>
